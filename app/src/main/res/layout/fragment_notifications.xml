<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".AppointmentsFragment">

    <!-- Header -->
    <TextView
        android:id="@+id/lblSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notifs_label"
        android:textColor="@color/blue"
        android:textSize="32sp"
        android:textStyle="bold"
        android:padding="8dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <!-- Appointment Reminder -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:backgroundTint="@color/white"
                android:gravity="start"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/iconSetting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dot_active"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:paddingVertical="12dp"/>

                <TextView
                    android:id="@+id/lblAppointmentReminder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="start"
                    android:padding="4dp"
                    android:text="@string/appointReminder"
                    android:textColor="@color/settings"
                    android:textSize="18sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <!-- Description for Appointment Reminder -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:backgroundTint="@color/white"
                android:gravity="start">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dot_active"
                    android:visibility="invisible"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:paddingVertical="12dp"/>
                <TextView
                    android:id="@+id/txtAppointmentDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="start"
                    android:paddingEnd="8dp"
                    android:text="@string/ReminderDescription"
                    android:textColor="@color/search_text"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <!-- New Slot -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:backgroundTint="@color/white"
                android:gravity="start"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/dot_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dot_green"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:paddingVertical="12dp"/>

                <TextView
                    android:id="@+id/lblNewSlot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="start"
                    android:padding="4dp"
                    android:text="@string/new_slot"
                    android:textColor="@color/settings"
                    android:textSize="18sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <!-- Description for New Slot -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:backgroundTint="@color/white"
                android:gravity="start">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dot_active"
                    android:visibility="invisible"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:paddingVertical="12dp"/>
                <TextView
                    android:id="@+id/txtNewSlotDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="start"
                    android:paddingEnd="8dp"
                    android:text="@string/newSlotDescription"
                    android:textColor="@color/search_text"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <!-- Health Tip -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:backgroundTint="@color/white"
                android:gravity="start"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/dot_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dot_red"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:paddingVertical="12dp"/>

                <TextView
                    android:id="@+id/lblHealthTips"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="start"
                    android:padding="4dp"
                    android:text="@string/health_tips"
                    android:textColor="@color/settings"
                    android:textSize="18sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <!-- Description for Health Tip -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:backgroundTint="@color/white"
                android:gravity="start">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dot_active"
                    android:visibility="invisible"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:paddingVertical="12dp"/>
                <TextView
                    android:id="@+id/txtHealthTipsDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="start"
                    android:paddingEnd="8dp"
                    android:text="@string/healthTipDescription"
                    android:textColor="@color/search_text"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <!-- Feedback Request -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:backgroundTint="@color/white"
                android:gravity="start"
                android:layout_marginTop="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dot_green"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:paddingVertical="12dp"/>

                <TextView
                    android:id="@+id/lblFeedbackRequest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="start"
                    android:padding="4dp"
                    android:text="@string/feedback_request"
                    android:textColor="@color/settings"
                    android:textSize="18sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <!-- Description for Feedback Request -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:backgroundTint="@color/white"
                android:gravity="start">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dot_active"
                    android:visibility="invisible"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:paddingVertical="12dp"/>
                <TextView
                    android:id="@+id/txtfeedbackDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="start"
                    android:paddingEnd="8dp"
                    android:text="@string/feedbackDescription"
                    android:textColor="@color/search_text"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </LinearLayout>

        </TableLayout>
    </RelativeLayout>
</LinearLayout>
