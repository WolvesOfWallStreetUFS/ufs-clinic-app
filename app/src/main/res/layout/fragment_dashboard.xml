<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".DashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi"
            android:textColor="@color/blue"
            android:layout_gravity="center"
            android:id="@+id/lblGreet"
            android:textSize="32sp"
            android:textStyle="bold"
            />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:outlineAmbientShadowColor="@color/blue"
            android:layout_marginLeft="270dp"
            android:src="@drawable/avatar"/>
    </LinearLayout>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/health_wellness_centre"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_marginVertical="30dp"
                android:textColor="@color/green"/>

            <ImageSwitcher
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/imgSwitcherHome"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginHorizontal="5dp"
                    android:id="@+id/viewDotOne"
                    android:background="@drawable/dot_inactive"/>
                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginHorizontal="5dp"
                    android:id="@+id/viewDotTwo"
                    android:background="@drawable/dot_inactive"/>
                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginHorizontal="5dp"
                    android:id="@+id/viewDotThree"
                    android:background="@drawable/dot_inactive"/>
                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginHorizontal="5dp"
                    android:id="@+id/viewDotFour"
                    android:background="@drawable/dot_inactive"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginVertical="20dp"
                android:background="@drawable/box_background"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblAppointmentHeading"
                    android:layout_marginVertical="10dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:id="@+id/lblAppointmentDetails"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:paddingHorizontal="30dp"
                android:id="@+id/btnHealthTips"
                android:backgroundTint="@color/light_blue"
                android:background="@drawable/box_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="@string/health_tips"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/brain"
                    android:layout_marginLeft="60dp"
                    android:layout_gravity="center"/>
            </LinearLayout> <!-- Health Tips-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:paddingHorizontal="30dp"
                android:backgroundTint="@color/light_blue"
                android:id="@+id/btnCampaign"
                android:background="@drawable/box_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="@string/campaign"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/peepstanding"
                    android:layout_marginLeft="60dp"
                    android:layout_gravity="center"/>
            </LinearLayout> <!-- Campaign -->

        </TableLayout>
    </ScrollView>

</FrameLayout>