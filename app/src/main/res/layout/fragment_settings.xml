<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".SettingsFragment">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:backgroundTint="@color/white"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/lblSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textColor="@color/blue"
            android:layout_gravity="start"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="12dp"/>
    </LinearLayout>

    <!-- User Profile -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardProfilePicture"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_gravity="end|center_horizontal"
                app:cardBackgroundColor="@color/white">

                <ImageView
                    android:id="@+id/ivProfilePicture"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:src="@drawable/avatar" />
                <ImageButton
                    android:id="@+id/btnEditProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/white"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_edit" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <TextView
            android:id="@+id/lblName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/student_name"
            android:textColor="@color/blue"
            android:layout_gravity="center"
            android:textSize="32sp"
            android:textStyle="bold"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/lblEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textColor="@color/grey"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textStyle="normal"
            android:padding="8dp"/>

    </LinearLayout>

    <!-- Settings Items -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <!-- Setting Item -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:backgroundTint="@color/white"
            android:gravity="start"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/iconSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingVertical="12dp"/>

            <TextView
                android:id="@+id/lblSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:textColor="@color/settings"
                android:layout_gravity="start"
                android:textSize="18sp"
                android:textStyle="normal"
                android:padding="12dp"
                android:layout_marginEnd="2dp"/>

            <ImageView
                android:id="@+id/iconArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingVertical="12dp"
                android:layout_gravity="end"/>

        </LinearLayout>

        <!-- Actual Settings Items -->
        <!-- ACCOUNT -->
        <include
            layout="@layout/settings_item"
            android:id="@+id/itemAccount"
            app:settingIcon="@drawable/icon_account"
            app:settingText="@string/account"/>

        <!-- NOTIFICATIONS -->
        <include
            layout="@layout/settings_item"
            android:id="@+id/itemNotifications"
            app:settingIcon="@drawable/icon_notifications"
            app:settingText="@string/notifs"/>

        <!-- APPEARANCE -->
        <include
            layout="@layout/settings_item"
            android:id="@+id/itemAppearance"
            app:settingIcon="@drawable/icon_appearance"
            app:settingText="@string/appearance"/>

        <!-- PRIVACY & SECURITY -->
        <include
            layout="@layout/settings_item"
            android:id="@+id/itemPrivacy"
            app:settingIcon="@drawable/icon_privacy"
            app:settingText="@string/privacy"/>

        <!-- SOUND -->
        <include
            layout="@layout/settings_item"
            android:id="@+id/itemSound"
            app:settingIcon="@drawable/icon_sound"
            app:settingText="@string/sound"/>

        <!-- LANGUAGE -->
        <include
            layout="@layout/settings_item"
            android:id="@+id/itemLanguage"
            app:settingIcon="@drawable/icon_language"
            app:settingText="@string/language"/>
    </TableLayout>

</LinearLayout>
